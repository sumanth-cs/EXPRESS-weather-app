    <!-- main header  -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">

                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>

                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">mon</p>
                        <p id="today_date">01 jan</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">get output here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
                            <p id="temp_status"><i class="fa-solid fa-cloud"></i></p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    </div>

    <!-- footer  -->
    {{>footer}}
    <script src="js/main.js"></script>
    <script>
        const curDay  = document.getElementById("day");
        const curDate = document.getElementById("today_date");

        const getCurrDay = () => {
            let weekdays = new Array(7);
            weekdays[0] = "sunday";
            weekdays[1] = "monday";
            weekdays[2] = "tue";
            weekdays[3] = "wed";
            weekdays[4] = "thu";
            weekdays[5] = "friday";
            weekdays[6] = "saturday";

            let currTime = new Date();
            return weekdays[currTime.getDay()];
        };
        curDay.innerHTML = getCurrDay();

        const getCurrDate = () => {
            let months = [
                "jan",
                "feb",
                "mar",
                "apr",
                "may",
                "jun",
                "jul",
                "aug",
                "sep",
                "oct",
                "nov",
                "dec"
            ]
            let now = new Date();
            let month = months[now.getMonth()];
            let date = now.getDate();
            let hour = now.getHours();
            let min = now.getMinutes();

            let period = "AM";

            if (hour > 11) {
                period = "PM";
                if (hour > 12) hour -= 12;
            }

            if (min < 10) {
                min = "0" + min;
            }

            return `${month} ${date} | ${hour}:${min}${period}`
        }
        curDate.innerHTML = getCurrDate();
    
    </script>
</body>

</html>